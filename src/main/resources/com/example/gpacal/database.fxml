<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpacal.dbHelper" style="-fx-background-color: #FAFAFA;">
    <top>
        <HBox spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 4, 0, 0, 2);">
            <children>
                <Label text="Database Records" style="-fx-font-size: 18px; -fx-font-weight: 700;" />

            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 12;">
            <TableView fx:id="table" prefHeight="300">
                <columns>
                    <TableColumn fx:id="rollCol" text="Roll" prefWidth="100" />
                    <TableColumn fx:id="nameCol" text="Student Name" prefWidth="200" />
                    <TableColumn fx:id="cgpaCol" text="CGPA" prefWidth="100" />
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="120" />
                </columns>
            </TableView>

            <HBox spacing="8">
                <TextField fx:id="rollField" promptText="Roll" prefWidth="100" />
                <TextField fx:id="nameField" promptText="Name" prefWidth="200" />
                <TextField fx:id="cgpaField" promptText="CGPA" prefWidth="100" />
                <Button text="Add" onAction="#addRecord"/>
                <Button text="Update" onAction="#updateRecord"/>
                <Button text="Delete" onAction="#deleteRecord"/>
                <Button text="Back" onAction="#goBack"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
