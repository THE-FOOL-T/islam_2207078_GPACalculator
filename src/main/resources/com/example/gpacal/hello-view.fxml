<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gpacal.HelloController"
            style="-fx-background-color: #FAFAFA;">

    <top>
        <StackPane BorderPane.alignment="CENTER"
                   style="-fx-padding: 25;">
            <Label text="GPA CALCULATOR"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: 700;
                          -fx-text-fill: #212121;
                          -fx-letter-spacing: 1px;" />
        </StackPane>
    </top>
    <center>
        <StackPane style="-fx-padding: 40;">
            <Button text="Start GPA Calculator"
                    prefWidth="220" prefHeight="48"
                    mnemonicParsing="false"
                    onAction="#switchScene"
                    style=" -fx-background-color: #6200EE;
                            -fx-text-fill: white;
                            -fx-font-size: 16px;
                            -fx-font-weight: 600;
                            -fx-background-radius: 8;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.18), 8, 0, 0, 3);
                            -fx-cursor: hand;" />
        </StackPane>
    </center>
</BorderPane>
