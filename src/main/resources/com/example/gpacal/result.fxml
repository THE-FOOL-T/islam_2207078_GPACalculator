<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpacal.resultController">
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <AnchorPane prefHeight="26.0" prefWidth="830.0">
                <children>
                    <Label alignment="CENTER" layoutY="4.0" prefHeight="20.0" prefWidth="830.0" text="Result ">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Separator />
                </children>
            </AnchorPane>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <TableView fx:id="courseTableView">
                <columns>
                    <TableColumn fx:id="serialColumn" minWidth="60.0" text="Sl. No." />
                    <TableColumn fx:id="codeColumn" minWidth="100.0" text="Course No." />
                    <TableColumn fx:id="nameColumn" minWidth="200.0" text="Course Title" />
                    <TableColumn fx:id="creditColumn" minWidth="80.0" text="Credit" />
                    <TableColumn fx:id="teacher1Column" minWidth="130.0" text="Teacher 1" />
                    <TableColumn fx:id="teacher2Column" minWidth="130.0" text="Teacher 2" />
                    <TableColumn fx:id="gradePointColumn" minWidth="100.0" text="Grade Point" />
                    <TableColumn fx:id="gradeColumn" minWidth="100.0" text="Letter Grade" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="14" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
            <Separator />
            <Label fx:id="congratsL" text="Congratulations! Your GPA is shown below." />
            <Label fx:id="totalcredL" text="Credit Completed : 0" />
            <Label fx:id="gpaL" text="GPA : 0.00" />
        </VBox>
    </bottom>
</BorderPane>
